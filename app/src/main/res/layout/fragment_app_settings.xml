<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#ff61ff83"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="App Preferences"
        android:layout_centerVertical="true"
        android:layout_alignParentTop="true"
        android:id="@+id/textView7"
        android:textStyle="bold|italic"
        android:textAppearance="?android:attr/textAppearanceLarge"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="192.168.42.1"
        android:id="@+id/cameraIPAddressTxtFieldId"
        android:textStyle="bold"
        android:layout_alignTop="@+id/setCameraAddrId"
        android:layout_alignParentStart="true" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set Camera IP"
        android:id="@+id/setCameraAddrId"
        android:layout_below="@+id/textView7"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/textView7" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wifi Auto reconnect"
        android:id="@+id/switch1"
        android:checked="false"
        android:textStyle="bold"
        android:layout_below="@+id/cameraIPAddressTxtFieldId"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:text="2"
        android:layout_alignTop="@+id/button"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/cameraIPAddressTxtFieldId" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BLE connect retry timeout"
        android:id="@+id/button"
        android:layout_below="@+id/switch1"
        android:layout_alignEnd="@+id/setCameraAddrId" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BLE Auto reconnect"
        android:id="@+id/switch2"
        android:checked="false"
        android:textStyle="bold"
        android:layout_below="@+id/editText"
        android:layout_alignEnd="@+id/button"
        android:layout_alignParentStart="true" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Querry_Session_holder"
        android:id="@+id/switch3"
        android:layout_below="@+id/switch2"
        android:layout_alignParentStart="true"
        android:checked="true"
        android:layout_alignEnd="@+id/button"
        android:textStyle="bold" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DebugLog  external storage"
        android:id="@+id/switch4"
        android:layout_alignParentStart="true"
        android:checked="false"
        android:textStyle="bold"
        android:layout_below="@+id/switch3"
        android:layout_alignEnd="@+id/button" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RTSP Stream Transport (UDP)"
        android:id="@+id/checkBox"
        android:layout_below="@+id/switch4"
        android:layout_alignParentStart="true"
        android:checked="true"
        android:layout_alignEnd="@+id/button"
        android:textStyle="bold" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RTSP Stream Transport (TCP)"
        android:id="@+id/checkBox2"
        android:layout_below="@+id/checkBox"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:checked="false"
        android:textStyle="bold" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RSTP Debug Log"
        android:id="@+id/switch5"
        android:layout_below="@+id/checkBox2"
        android:layout_alignParentStart="true"
        android:textStyle="bold"
        android:checked="false"
        android:layout_alignEnd="@+id/button" />


</RelativeLayout>